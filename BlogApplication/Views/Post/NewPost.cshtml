@model BlogApplication.Models.PostViewModel
@{
    ViewBag.Title = "Nytt innlegg";
}
<div class="container">
    <div class="row">
            @using (Html.BeginForm("AddNewPost", "Post", FormMethod.Post, new { @class = "form create-post-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, "Tittel")
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Introduction, "Ingress")
                    @Html.TextBoxFor(m => m.Introduction, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content, "Innhold")
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "5" })
                </div>
                <input type="submit" value="Legg til" class="btn btn-primary" />
            }
    </div>
</div>